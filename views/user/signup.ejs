<!DOCTYPE html>
<html lang="en">

<%- include('../partials/head', {title: 'Register User'}) %>

<%- include('../partials/navbar') %>

<body>
    <div>
        <%= locals.err && err%>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h1>Sign Up</h1>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <form method="POST" action="/user">
                    <div class="form-group">
                        <input type="email" class="form-control" placeholder="input your email" name="email">
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="input your name" name="name">
                    </div>
                    <button type="submit" class="btn btn-danger">Sign Up</button>
                </form>
            </div>
        </div>
    </div>
    <%- include('../partials/footer') %>

</body>

</html>