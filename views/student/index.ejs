<!DOCTYPE html>
<html lang="en">

<%- include('../partials/head', {title: 'Students Data'}) %>
<%- include('../partials/navbar') %>

<body>
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h1>Students Data</h1>
            </div>
            <div><a href="students/add">add student</a></div>
        </div>
        <div class="row">
            <table class="table">
                <thead>
                    <tr>
                        <th>id</th>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Email</th>
                        <th>Actions</th>
                        <th>Options</th>
                    </tr>
                </thead>
                <tbody>
                    <% if(students!==null && students!== undefined) {
                        students.forEach(function(el) { 
                    %>
                    <tr>
                        <td><%= el.id %></td>
                        <td><%= el.firstName %></td>
                        <td><%= el.lastName %></td>
                        <td><%= el.email %></td>
                        <td> <a href="/students/<%=el.id%>/add-subject">Add Subject</a></td>
                        <td>
                            <span><a href="/students/edit/<%=el.id%>">edit</a></span>
                            <span><a href="/students/delete/<%=el.id%>"
                                    onclick="return confirm('Are you sure?')">delete</a></span>
                        </td>
                    </tr>
                    <% 
                        });
                        } 
                    %>
                </tbody>
            </table>
        </div>
    </div>
    <%- include('../partials/footer') %>
</body>
</html>